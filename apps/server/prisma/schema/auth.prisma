model User {
  id                  String    @id @map("_id")
  name                String
  email               String?   @unique
  // Better Auth Phone Number plugin fields
  phoneNumber         String?   @unique
  phoneNumberVerified Boolean   @default(false)
  emailVerified       Boolean
  image               String?
  createdAt           DateTime
  updatedAt           DateTime
  banned              Boolean   @default(false)

  @@index([phoneNumber])
  @@map("user")
}