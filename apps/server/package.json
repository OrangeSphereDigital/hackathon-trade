{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "NODE_ENV=production PORT=5001 bun run dist/index.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/cron": "^1.4.1",
    "@elysiajs/swagger": "^1.3.1",
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@root/auth": "workspace:*",
    "@root/db": "workspace:*",
    "better-auth": "^1.4.1",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.16",
    "ethers": "^6.15.0",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "socks-proxy-agent": "^8.0.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@root/config": "workspace:*",
    "@types/bun": "^1.3.3",
    "@types/nodemailer": "^7.0.4",
    "prisma": "^7.0.0",
    "tsdown": "^0.16.6",
    "typescript": "^5.9.3"
  }
}
